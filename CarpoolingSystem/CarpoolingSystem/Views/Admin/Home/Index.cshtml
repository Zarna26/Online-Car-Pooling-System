@{
    ViewData["Title"] = "Driver Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4"><i class="fas fa-car"></i> Driver Dashboard</h2>

    <div class="row">
        <!-- My Rides -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-route fa-3x text-primary"></i>
                    <h5 class="mt-3">My Rides</h5>
                    <p class="text-muted">Manage your upcoming and past rides.</p>
                    <a asp-controller="Driver" asp-action="MyRides" class="btn btn-primary btn-sm">View Rides</a>
                </div>
            </div>
        </div>

        <!-- Passenger Requests -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-success"></i>
                    <h5 class="mt-3">Passenger Requests</h5>
                    <p class="text-muted">Approve or reject ride requests.</p>
                    <a asp-controller="Driver" asp-action="PassengerRequests" class="btn btn-success btn-sm">View Requests</a>
                </div>
            </div>
        </div>

        <!-- Earnings -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-wallet fa-3x text-warning"></i>
                    <h5 class="mt-3">Earnings</h5>
                    <p class="text-muted">Track your earnings and payments.</p>
                    <a asp-controller="Driver" asp-action="Earnings" class="btn btn-warning btn-sm">View Earnings</a>
                </div>
            </div>
        </div>
    </div>

    <hr class="mt-4">

    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-3"><i class="fas fa-chart-line"></i> Ride Statistics</h4>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Total Rides Completed
                    <span class="badge bg-primary rounded-pill">150</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Pending Ride Requests
                    <span class="badge bg-success rounded-pill">3</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Earnings This Month
                    <span class="badge bg-warning rounded-pill">$1,200</span>
                </li>
            </ul>
        </div>

        <div class="col-md-6">
            <h4 class="mb-3"><i class="fas fa-bell"></i> Recent Activity</h4>
            <ul class="list-group">
                <li class="list-group-item"><i class="fas fa-user-check text-primary"></i> Ride request accepted from Alice</li>
                <li class="list-group-item"><i class="fas fa-money-bill-wave text-success"></i> Payment received from John</li>
                <li class="list-group-item"><i class="fas fa-star text-warning"></i> New 5-star rating from David</li>
            </ul>
        </div>
    </div>
</div>
