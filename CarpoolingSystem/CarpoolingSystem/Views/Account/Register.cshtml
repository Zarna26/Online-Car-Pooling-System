@{
    ViewData["Title"] = "Register";
}

<link href="~/css/Site.css" rel="stylesheet" />
<link href="~/css/Register.css" rel="stylesheet" />

<div class="full-background">
    <div class="register-container">
        <!-- Left Section: Registration Form -->
        <div class="left-section">
            <div class="registerbox">
                <img src="~/Images/login.png" alt="User Icon" class="user" />
                <h2>Register to GoMate</h2>
                <form method="post">

                    <!-- First Name -->
                    <label class="lblfname">First Name</label>
                    <input type="text" class="txtfield" name="FirstName" placeholder="Enter First Name" required />

                    <!-- Last Name -->
                    <label class="lbllname">Last Name</label>
                    <input type="text" class="txtfield" name="LastName" placeholder="Enter Last Name" required />

                    <!-- Email -->
                    <label class="lblemail">Email</label>
                    <input type="email" class="txtfield" name="Email" placeholder="Enter Email" required />

                    <!-- Password -->
                    <label class="lblpass">Password</label>
                    <input type="password" class="txtfield" name="Password" placeholder="********" required />

                    <!-- Confirm Password -->
                    <label class="lblpass">Confirm Password</label>
                    <input type="password" class="txtfield" name="ConfirmPassword" placeholder="********" required />

                    <!-- Contact Number -->
                    <label class="lblmonumber">Contact Number</label>
                    <input type="text" class="txtfield" name="PhoneNumber" placeholder="Enter Contact Number" required />

                    <!-- Gender Selection -->
                    <label class="lblgender">Gender</label>
                    <div class="radio-group">
                        <input type="radio" id="male" name="Gender" value="Male" required>
                        <label for="male">Male</label>

                        <input type="radio" id="female" name="Gender" value="Female" required>
                        <label for="female">Female</label>

                        <input type="radio" id="other" name="Gender" value="Other" required>
                        <label for="other">Other</label>
                    </div>

                    <br />

                    <!-- Register Button -->
                    <button type="submit" class="btnsubmit">Register</button>

                    <br /><br />

                    Already have an account?
                    <a asp-page="/Login" class="btnlogin">Click Here to Login</a>
                </form>
            </div>
        </div>

        <!-- Right Section: Promotional Text -->
        <div class="right-section">

            <h1>Find Your Ride, Share Your Journey</h1>
            <p>Connect with drivers and riders to share travel costs and reduce your carbon footprint.</p>
        </div>
    </div>
</div>
