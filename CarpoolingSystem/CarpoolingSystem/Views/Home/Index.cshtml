@{
    ViewData["Title"] = "Home";
}@if (TempData["SuccessMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("toastMessage").innerText = "@TempData["SuccessMessage"]";
            var toast = new bootstrap.Toast(document.getElementById("successToast"));
            toast.show();
        });
    </script>
}

<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <span id="toastMessage"></span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>


<!-- Hero Section with Animated Background -->
<div class="hero-section">
    <div class="hero-background"></div>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-content" data-aos="fade-right">
                <h1 class="display-4 fw-bold mb-4">Find Your Ride, Share Your Journey</h1>
                <p class="lead mb-4">Save money, reduce your carbon footprint, and connect with others on the go.</p>
                <div class="hero-buttons">
                    <a asp-controller="CarPool" asp-action="Index" class="btn btn-light btn-lg me-3">
                        <i class="fas fa-car me-2"></i>Book Your Ride
                    </a>
                    <a href="#learn-more" class="btn btn-outline-light btn-lg">Learn More</a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block" data-aos="fade-left">
                <img src="~/Images/logo.webp" alt="Carpooling" class="hero-image">
            </div>
        </div>
    </div>
</div>

<!-- Search Form Section -->
<div class="search-section">
    <div class="container">
        <div class="search-box" data-aos="fade-up">
            <form asp-controller="CarPool" asp-action="Search" method="get">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                            <input type="text" class="form-control" placeholder="From" name="from" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                            <input type="text" class="form-control" placeholder="To" name="to" required>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                            <input type="date" class="form-control" name="date" required>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success w-100">Search Rides</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="features-section" id="features">
    <div class="container">
        <h2 class="section-title text-center mb-5" data-aos="fade-up">Why Choose GoMate?</h2>
        <div class="row">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="fas fa-leaf"></i>
                    </div>
                    <h3 class="feature-title">Eco-Friendly</h3>
                    <p>Reduce your carbon footprint by sharing rides with others going the same way.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="fas fa-wallet"></i>
                    </div>
                    <h3 class="feature-title">Cost Saving</h3>
                    <p>Split travel expenses and save significantly on your daily commute.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="fas fa-map-marked-alt"></i>
                    </div>
                    <h3 class="feature-title">Real-Time Tracking</h3>
                    <p>Track your ride in real-time for added safety and convenience.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<div class="how-it-works-section bg-light">
    <div class="container">
        <h2 class="section-title text-center mb-5" data-aos="fade-up">How It Works</h2>
        <div class="row">
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="100">
                <div class="step-box">
                    <div class="step-number">1</div>
                    <h4>Sign Up</h4>
                    <p>Create your account in minutes</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="200">
                <div class="step-box">
                    <div class="step-number">2</div>
                    <h4>Find a Ride</h4>
                    <p>Search for available rides</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="300">
                <div class="step-box">
                    <div class="step-number">3</div>
                    <h4>Book & Pay</h4>
                    <p>Secure your seat instantly</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="400">
                <div class="step-box">
                    <div class="step-number">4</div>
                    <h4>Travel</h4>
                    <p>Enjoy your shared journey</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Benefits Section -->
<div class="benefits-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6" data-aos="fade-right">
                <h2 class="section-title">Why GoMate Ride?</h2>
                <div class="benefits-grid">
                    <div class="benefit-item">
                        <i class="fas fa-clock"></i>
                        <h5>On Time Every Time</h5>
                    </div>
                    <div class="benefit-item">
                        <i class="fas fa-money-bill-wave"></i>
                        <h5>Lower and Consistent Fare</h5>
                    </div>
                    <div class="benefit-item">
                        <i class="fas fa-ban"></i>
                        <h5>No Last Minute Cancellation</h5>
                    </div>
                    <div class="benefit-item">
                        <i class="fas fa-snowflake"></i>
                        <h5>Assured AC Rides</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-6" data-aos="fade-left">
                <img src="~/Images/benefits.webp" alt="Benefits" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="cta-section">
    <div class="container text-center">
        <h2 class="mb-4" data-aos="fade-up">Ready to Start Your Journey?</h2>
        <p class="mb-5" data-aos="fade-up" data-aos-delay="100">Join thousands of happy riders who are already saving money and time.</p>
        <div class="cta-buttons" data-aos="fade-up" data-aos-delay="200">
            @if (!User.Identity.IsAuthenticated)  //  Hide Sign Up if logged in
            {
                <a asp-controller="Account" asp-action="Register" class="btn btn-success btn-lg me-3">Sign Up Now</a>
            }
            <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-success btn-lg">Contact Us</a>
        </div>
    </div>
</div>




